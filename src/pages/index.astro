---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/sections/Hero.astro';
import Problem from '../components/sections/Problem.astro';
import Solution from '../components/sections/Solution.astro';
import Steps from '../components/sections/Steps.astro';
import Clients from '../components/sections/Clients.astro';
import Questions from '../components/sections/Questions.astro';
import Action from '../components/sections/Action.astro';
---

<Layout title="Myte by theRamoShe">
	<Hero />
	<Problem />
	<Solution />
	<Steps />
	<Clients />
	<Questions />
	<Action />
</Layout>

<style is:global>
	h2 {
		color: var(--gray-light);
		font-family: var(--font-display);
		text-align: center;
	}
	.light h2 {
		color: var(--gray-dark);
	}

</style>
