---
import { Image } from "astro:assets";
import Logo from "../assets/logo.svg";
import { ThemeSwitch } from "astro-color-scheme";
import { Icon } from "astro-icon";
---
<header>
    <a class="logo-name" href="/">
        <Image class="logo" src={Logo} alt="Myte Logo" />
        <span class="name">MYTE by theRamoShe</span>
    </a>
    <div class="toggle-button">
        <div class="toggle">
            <ThemeSwitch strategy="checkbox" defaultTheme="dark">
                <input type="checkbox" id="toggle" />
                <label for="toggle"><Icon  name="heroicons-outline:sun" /></label>
            </ThemeSwitch>
        </div>
        <a href="/start" class="btn btn-secondary">Get Started</a>
    </div>
</header>

<style>
    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 20px;
        margin: 0 auto;
        width: 1250px;
    }

    .logo-name {
        display: flex;
        align-items: center;
        column-gap: 1em;
        text-decoration: none;
        color: var(--text-color);
    }
    .logo {
        width: 100px;
        height: auto;
    }
    .name {
        font-weight: bold;
    }

    .toggle-button {
        display: flex;
        align-items: center;
    }
    .toggle input[type='checkbox'] {
        display: none;
    }
    .toggle {
        width: 30px;
        line-height: 0;
        padding: .5em;
    }
    .toggle:hover {
        background-color: var(--accent-contrast);
        border-radius: 10px;
    }
</style>